{
    "name": "tristanbes/elophant-bundle",
    "type": "symfony-bundle",
    "description": "Easy manipulation for Elophant API in order to get league of legends statistics",
    "license" : "MIT",
    "keywords": ["Elophant", "league of legends", "LoL", "API"],
    "authors": [
        {
            "name": "Tristan Bessoussa",
            "email": "tristan.bessoussa@gmail.com"
        }
    ],
    "autoload": {
        "psr-0": { "Tristanbes\\ElophantBundle": "" }
    },
    "require": {
        "php": ">=5.3.3",
        "symfony/framework-bundle": "~2.1",
        "misd/guzzle-bundle": "~1.0",
        "snc/redis-bundle" : "1.1.*"
    },
    "require-dev": {
        "predis/predis": "0.8.*@dev"
    },
    "suggest": {
        "sonata-project/admin-bundle": "If you want to use the statistic dashboard"
    },
    "target-dir": "Tristanbes/ElophantBundle",

    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
